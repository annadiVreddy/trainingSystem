
extends layout

block content
	div.container(style='margin:50px 50px 50px 50px')
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				a(href='/home')
					img(src='/vendor/vergemobile.png')
				.navbar-header
					.navbar-brand Trainer Control Panel
				ul.nav.navbar-nav.navbar-right
					li
						.navbar-btn#btn-logout.btn.btn-default
							| Sign Out

	div.container(style='margin: 50px 50px 50px 50px')
		table.table.table-bordered.table-striped
			thead
				tr
					th(style='width:40px') #
					th(style='width:180px') Name
					th(style='width:180px') email
					th Phase 1
					th Phase 2
					th Phase 3
					th EDIT
			tbody
			- for (var i = 0; i < accts.length; i++)
				- if (accts[i].country == "Trainee")
					tr
						td= accts[i]._id
						td= accts[i].name
						td= accts[i].email
						td= accts[i].phase1
						td= accts[i].phase2
						td= accts[i].phase3
						td
							a(href='/edit?id=#{accts[i]._id}' , onclick='return confirm("You are going to edit this user. Continue?")') Edit

block scripts
	script(src='/vendor/jquery-2.2.3.min.js')
	script(src='/vendor/jquery.form.min.js')
	script(src='/vendor/bootstrap.min.js')
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')
	script(src='/js/form-validators/accountValidator.js')