
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId



#account-form-container.center-vertical
	form(method="post")#account-form1.form-horizontal.well
		h3.column(style="color: green; text-align: center;") Please Update the Trainee Details
		hr
		.form-group
			label.control-label.col-sm-3 Name
			.col-sm-9
				input.form-control#name-tf(type='text', name='name', value= user.name)

		.form-group
			label.control-label.col-sm-3 Email
			.col-sm-9
				input.form-control#email-tf(type='text', name='email', value= user.email)

		.form-group
			label.control-label.col-sm-3 Account Type
			.col-sm-9
				select.form-control#country-list(name='country', required).readonly
					each item in countries
						option(selected=item.name == user.country)= item.name		
		.form-group
			if(typeof(udata)!= 'undefined')
					label.control-label.col-sm-3 Phase 1
					.col-sm-9
						select.form-control#etype-list(name='phase1', required)
							each item in employeeTypes
								option(selected=item.name == user.phase1)= item.name
		.form-group
			if(typeof(udata)!= 'undefined')
				label.control-label.col-sm-3 Phase 2
				.col-sm-9
					select.form-control#etype-list(name='phase2', required)
						each item in employeeTypes
							option(selected=item.name == user.phase2)= item.name

		.form-group
			if(typeof(udata)!= 'undefined')
				label.control-label.col-sm-3 Phase 3
				.col-sm-9
					select.form-control#etype-list(name='phase3', required)
						each item in employeeTypes
							option(selected=item.name == user.phase3)= item.name
		
		hr
		.form-buttons
			//button(type='button')#account-form-btn1.btn.btn-default//
			button(type='submit')#account-form-btn2.btn.btn-primary
		.clearfix

	

// display form errors in a custom modal window //

include modals/form-errors

